{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "preserveConstEnums": true
  },
  "references": [{ "path": "../shared" }]
}
